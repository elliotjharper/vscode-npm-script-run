{
    "name": "elltg-npm-script-run",
    "displayName": "Command Palette NPM Script Runner",
    "description": "Run NPM scripts from the command palette",
    "icon": "images/logo-npm-run_128.png",
    "publisher": "elltg",
    "version": "1.0.9",
    "repository": {
        "type": "git",
        "url": "https://github.com/elliotjharper/vscode-npm-script-run.git"
    },
    "engines": {
        "vscode": "^1.71.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:elltg-npm-script-run.runNpmScriptCurrentTerminal",
        "onCommand:elltg-npm-script-run.runNpmScriptNewTerminal"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "elltg-npm-script-run.runNpmScriptCurrentTerminal",
                "title": "Run NPM Script From /package.json (Last Used Terminal)"
            },
            {
                "command": "elltg-npm-script-run.runNpmScriptNewTerminal",
                "title": "Run NPM Script From /package.json (New Terminal)"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.71.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4",
        "ts-loader": "^9.3.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "@vscode/test-electron": "^2.1.5"
    }
}
